<% if flash[:notice] %>
	<p style="background-color: yellow"><%=flash[:notice]%></p>
<% end %>
<h1> Log in </h1>
<%= form_tag "/sessions" do %>
	<%=label_tag :email%><br>
	<%=text_field_tag :email %><br>
	<%=label_tag :password %><br>
	<%=password_field_tag :password %><br>
	<%=submit_tag :login %>
<% end %>
<br>

<%= link_to("New? Click here to Register.",new_user_path) %>